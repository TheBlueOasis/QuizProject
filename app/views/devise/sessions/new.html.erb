<div class='flex flex-col w-3/5 mx-auto mt-3 border border-2 rounded-lg border-purple bg-purple-ultralight p-5 shadow-lg text-lg'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='grid px-3'>
      <%= f.label :email, class: 'mb-1' %>
      <%= f.email_field :email, autofocus: true, placeholder: 'john@gmail.com', autocomplete: 'email', class: 'border border-purple-light rounded' %>
      <%= f.label :password, class: 'mt-3 mb-1' %>
      <%= f.password_field :password, placeholder: 'Password', autocomplete: 'current-password', class: 'border border-purple-light rounded' %>
    </div>

    <div class='px-3'>
      <% if devise_mapping.rememberable? %>
        <div class='flex items-center gap-2 mt-2'>
          <%= f.check_box :remember_me, class: 'border border-purple-light rounded' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class='actions'>
        <%= f.submit 'Log in', class: 'mb-3 bg-purple-light hover:bg-purple text-white font-bold px-3 rounded mt-3 border border-purple' %>
      </div>
    </div>
    <% end %>

    <%= render 'devise/shared/forgot_password' %>
  </div>
</div>
