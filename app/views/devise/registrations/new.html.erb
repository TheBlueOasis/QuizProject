<div class='flex flex-col w-3/5 mx-auto mt-3 border border-2 rounded-lg border-purple bg-purple-ultralight p-5 shadow-lg text-lg'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <div class='grid px-3'>
      <%= f.label :email, class: 'mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'border border-purple-light rounded' %>

      <div class='flex items-center justify-between mt-2 mb-1'>
        <%= f.label :password, class: '' %>
        <% if @minimum_password_length %>
          <p class='opacity-50 text-xs'> (<%=@minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'border border-purple-light rounded' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'border border-purple-light rounded' %>
    </div>
    
    <div class='px-3'>
      <div class='actions'>
        <%= f.submit 'Sign up', class: 'mb-3 bg-purple-light hover:bg-purple text-white font-bold px-3 rounded mt-3 border border-purple'  %>
      </div>
    </div>
  <% end %>
</div>
