<div class='flex flex-col w-3/5 mx-auto mt-3 border border-2 rounded-lg border-purple bg-purple-ultralight p-5 shadow-lg text-lg'>
  <div class='px-3'>
    <h2 class='text-xl font-bold mb-3'>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
        <div class='grid'>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: 'email' %>
        </div>

      <div class='actions'>
        <%= f.submit 'Send me reset password instructions', class: 'bg-purple-light hover:bg-purple text-white font-bold px-3 rounded mt-3 border border-purple' %>
      </div>
    <% end %>
  </div>
</div>
