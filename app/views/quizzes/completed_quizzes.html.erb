<% @my_answers.each do |answer| %>
  <% quiz = answer.quiz %>
  <% question_count = quiz.questions.count %>
  <a href='<%= completed_quiz_path(answer.id) %>' class='flex mt-5 items-center cursor-pointer justify-between gap-5 border bg-purple-ultralight rounded-2xl border-purple hover:bg-purple-superlight shadow-lg p-3'>
    <div class='flex flex-col'>
      <p class='text-2xl'><%= quiz.name %></p>
      <p class='text-xs opacity-50'><%= "#{question_count} #{question_count == 1 ? 'question' : 'qeustions'}" %></p>
      <p class='text-xs opacity-50'><%= "Created by #{quiz.user&.email}" %></p>
      <p class='text-xs opacity-50'><%= "Taken #{created_ago(answer.created_at, DateTime.now())} ago" %></p>
    </div>
    <div class='flex'>
      <p class='<%= attempt_color(answer) %>'><%= "Your result: #{format_score(answer.score)}" %></p>
    </div>
  </a>
<% end %>
